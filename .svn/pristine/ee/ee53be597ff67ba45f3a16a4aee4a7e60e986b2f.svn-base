* {
    margin: 0;
    padding: 0;
    list-style: none;
    text-decoration: none;
}

.helloWord {
    height: 100%;
    .sendKey {
        height: 0.52rem;
        border-radius: 0.05rem;
        background: white;
        border: none;
        width: 1.3rem
    }
    .hello_content {
        position: relative;
        //background-image: url("../assets/login_03.jpg");
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        align-items: center;
        //background: url(../assets/image/login_03.jpg);
        img {
            width: 100%;
            margin-top: 0.5rem;
            height: 6.4rem;
        }
        .identify {
            width: 33%;
            height: 1.3rem;
            position: absolute;
            top: 1.4rem;
            z-index: 10;
        }
        .hiddenItem {
            width: 3.25rem;
            height: 0.51rem;
            position: absolute;
            z-index: 10;
            left: 0.25rem;
        }
        .inputItem {
            width: 3.25rem;
            border: none !important;
            border-radius: 0.05rem;
            height: 0.51rem;
            box-sizing: border-box;
            padding: 0 0.2rem;
        }
        //>div:nth-of-type(1){
        //  width: 3.4rem;
        //  height: 0.47rem;
        //  text-align: center;
        //  line-height: 0.47rem;
        //  font-weight: bolder;
        //  background: #1AAD19;
        //  color: white;
        //  margin-bottom: 0.12rem;
        //}
        //>div:nth-of-type(2){
        //  text-align: center;
        //  font-size: #1B1B1B;
        //}
    }
    .show {
        display: flex;
        align-items: center;
        .weui-cell weui-check_label > .weui-cell__hd:nth-of-type(2) {
            flex: 0;
        }
    }
    .showhello {
        height: 667px;
        background: rgba(0, 0, 0, 1);
        opacity: 0.5;
    }
    .username_button {
        margin: 0.4rem 0 0.13rem 0;
        width: 0.5rem;
        height: 0.25rem;
        border: 0;
        font-size: 0.2rem;
        color: green;
        background: #FFFFFF;
        outline: none;
    }
    #change > div.weui-cells.weui-cells_checkbox > label > div.weui-cell__bd > p {
        margin: 0;
        padding: 0;
    }
}
