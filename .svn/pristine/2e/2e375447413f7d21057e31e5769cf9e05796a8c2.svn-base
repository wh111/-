        studyProductList: [],  // 最近练习
        assessmentRecommendData: [], // 推荐练习
        productTypeListData: [{value: 1, title: '小升初'}, {value: 2, title: '初升高'}, {value: 3, title: '中考'}, {
          value: 4,
