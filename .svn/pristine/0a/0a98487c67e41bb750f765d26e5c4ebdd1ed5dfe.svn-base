.hello_header{
  width: 100%;
  position: fixed;
  top: 0;
  display: flex;
  justify-content: space-between;
  align-items: center !important;
  background: #373A3C;
  font-weight: bold;
  box-sizing: border-box;
  padding: 0.1rem 0.15rem 0.1rem 0.05rem;
  z-index: 999;
  li{
    list-style: none;
    color:#CBCBCB
  }
  li:nth-of-type(1){
    display: flex;
    align-items: normal;
    margin-right: 0.01rem;
    >div{
      box-sizing: border-box;
      margin-top: 0.035rem;
    }
    >div:nth-of-type(1){
      margin-right: 0.05rem;
    }
    >div:nth-of-type(2){
      margin-right: 0.05rem;
    }
    .vux-x-icon {
      fill: #FAFAFA;
    }
  }
  li:nth-of-type(2){
    box-sizing: border-box;
    margin-top: -0.01rem;
    margin-left: -0.4rem;
  }
  li:nth-of-type(3){
    display: flex;
    align-items: center;
    text-align: right;
    div{
      margin-right: 0.03rem;
      width: 0.06rem;
      height: 0.06rem;
      background: #FAFAFA;
      border-radius: 50%;
    }
  }
}
.stance{
  height: 0.5rem;
}
