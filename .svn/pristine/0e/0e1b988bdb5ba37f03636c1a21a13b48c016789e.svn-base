.appraisal_math{
  .flex-demo_item{
    font-size: 0.14rem;
    text-align: right;
    width: 0.7rem;
  }
  .box1{
    height: 0.4rem;
    margin-top: 0.12rem;
  }
  .content_flexbox_title{
    height: 0.5rem;
  }
  .selfApple {
    width: 0.22rem !important;
    height: 0.22rem !important;
    display: inline-block;
    background-size: 100%;
    cursor: pointer;
  }
  .selfApple1 {
    background-image: url("/sasmobile/img/app-1.png");
  }
  .selfApple2 {
    background-image: url("/sasmobile/img/app-2.png");
  }
  .selfApple3 {
    background-image: url("/sasmobile/img/app-3.png");
  }
  .selfApple4 {
    background-image: url("/sasmobile/img/app-4.png");
  }

  .content_flexbox{
    justify-content: space-between;
    box-sizing: border-box;

  }
  .content_flexbox:nth-of-type(1){
    padding:0 0.15rem;
    color: #1b1b1b;
    font-size: 0.18rem;

  }
  .content_flexbox:nth-of-type(2){
    color: #1B1B1B;
    padding:0 0.15rem;
    align-items: center;
    font-size: 0.14rem;
    height: 0.25rem;
  }
  .content_flexbox:nth-of-type(3){
    color: #1B1B1B;
    padding:0 0.15rem;
    align-items: center;
    font-size: 0.14rem;
    height: 0.25rem;
    margin-bottom: 0.2rem;
  }
  .aside{
    box-sizing: border-box;
    height: 0.25rem;
    line-height: 0.3rem;
    font-size: 0.12rem;
    background: #DEEAE1;
    color: #1b1b1b;
    padding: 0 0.15rem;
  }
  .footer{
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    height: 0.5rem;
    color: #1b1b1b;
    font-size: 0.14rem;
    border-bottom: 0.01rem solid #EAF1EC;
    .fontSize{
      font-size: 0.14rem;
    }
  }
  .vux-x-icon {
    fill: #DBDBDB;
    margin-top: 0.05rem;
  }
  .content_progress{
    border-radius: 0.05rem;
    overflow: hidden;
    >div{
      height: 0.09rem;
    }
  }
}
