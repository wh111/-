<template>
    <div class="tAlready">
        <div class="tAlreadyBox" v-for="(item,index) in data" :key="index">
            <ul class="tAlreadyHeader">
                <li class="HeaderLeft">
                    <div>{{item.studentName}}</div>
                    <p> {{item.endTime| formatDate('yyyy-MM-dd HH:mm:ss')}} 上交 | 用时    {{(item.usedTime/60||0).toFixed(0)}}分{{(item.usedTime%60||0)}}秒</p>
                </li>
                <li class="HeaderRight">
                    <div> {{item.totalScore||item.score||0}}</div>
                    <p>得分</p>
                </li>
            </ul>
            <div class="btns">
                <button @click="open('tAppraisal',item)" style="outline: 0;text-decoration: none">查看详情</button>
                <x-icon type="ios-arrow-forward" size="0.25rem"></x-icon>
            </div>
        </div>
    </div>
</template>
<script>
  /* 当前组件必要引入 */
  import api from './api'
  // 当前组件引入全局的util
  // let Util = null
  export default {
    data () {
      return {
        data: []
      }
    },
    methods: {
      // 初始化请求列表数据
      init () {
          this.setTableData ();
      },
      open (type,item) {
        let query=Object.assign(this.$route.query,{studentId:item.studentId})
        this.$router.push({name: 'tAppraisal', query: query})
      },
      setTableData () {
        this.ajax({
          ajaxSuccess: (data, res) => {this.data = data},
          url: api.queryMarkList.path,
          params: {
            workId: this.$route.query.id,
            groupsId: this.$route.query.groupsId,
            isMarked: 1
          }
        })
      },
    },
    created () {
      this.init()
    },
    mounted () {
    },
    components: {}
  }
</script>
<style lang="scss">
    @import "../../../tcss/tAlready";
</style>
