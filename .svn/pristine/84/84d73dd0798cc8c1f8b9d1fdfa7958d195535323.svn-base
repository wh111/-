*{
  margin: 0;
  padding: 0;
  list-style: none;
}
#allBook{


  .content{
    display: flex;
    align-items: center;
    border-bottom: 0.01rem solid #E9E9E9;
    box-sizing: border-box;
    padding: 0.15rem;
    //>:first-child{
    //  border: 1px solid #E9E9E9;
    //  border-radius: 0.05rem;
    //  width: 0.9rem;
    //  display: flex;
    //  justify-content: center;
    //  align-items: center;
    //  padding: 0.08rem 0.1rem;
    //  margin: 0.2rem 0.15rem;
      .img{
        //width: 0.675rem;
        float: left;
        height: 0.9rem;
      }
    .shop{
      .ul{
        float: left;
        width: 2.5rem;
        color:#1b1b1b;
        margin-left: 0.2rem;
        li{
          font-size: 0.12rem;
          line-height: 0.2rem;
          color:#626262;
        }
        span{
          font-size: 0.12rem;
          color:#626262;
        }
        .tag{
          font-size: 0.15rem;
          color: #1b1b1b;
        }
        .price{
          span{
            color:#ff0000;
            font-size: 0.13rem;
          }
        }
      }
    }
    .btn{
      padding: 0;
      text-align: left;
      button{
        width: 0.5rem;
        height: 0.25rem;
        border-radius: 0.03rem;
        font-size: 0.12rem;
        color: white;
        border: none;
        line-height: 0.25rem;
      }
      .green{
        background: #11a640;
      }
      .yellow{
        background: #ec6941;
      }
      .white{
        background: white;
        color: #D2D2D2;
        border: 1px solid #ccc;
      }
      .last{
        color:#ec6941!important;
      }

    }
    //}
  }
  .homePage_book{
    >div{
      font-size: 0.16rem;
      color: #5D5D5D;
      font-weight: bolder;
      margin-bottom: 0.03rem;
    }
    >div:not(:first-child){
      display: inline-block;
      margin-right: 0.2rem;
      margin-bottom: 0.03rem;
      span{
        font-size: 0.12rem;
      }
      >span:nth-of-type(1){
        color: #909090;
        margin-right: 0.05rem;
      }

    }
    p{
      font-size: 0.12rem;
      color: #909090;
      font-weight: bold;
      margin-bottom: 0.1rem;
    }
    >p:nth-of-type(2){
      color: #EF7E5D;
      font-size: 0.14rem;
    }

  }
  .btns{
    border: 0;
    width: 0.5rem;
    height: 0.25rem;
    font-size: 0.11rem;
    background: #EC6941;
    color: #FBE5DE;
    font-weight: bold;
    border-radius: 0.05rem;
  }

}
