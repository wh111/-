.pDynamic {
    #passGrade1,#passGradeRank{
        div{
            top:-0.2rem;
        }

    }
    .backColor{
        background: #DEEAE1;
        height: 0.15rem;
    }
    .groupsDetailtitle {
        margin-top: 0.16rem;
        font-size: 0.17rem;
        color: #222;
    }
    .growthArchives-root-timeborder {
        text-align: right;
        z-index:10;
        position: relative;
        button {
            background: white;
            font-size: 0.09rem;
            height: 0.2rem;
            line-height: 0.2rem;
            width: 0.35rem;
            //border-radius: 0.04rem;
            border: 0.01rem solid #E9E9E9;
            color: #707070;
        }
        .focus {
            background: #1AAD19;
            color: white;
            border-color: #1AAD19;
        }
        .left{
            border-bottom-left-radius: 0.04rem;
            border-top-left-radius: 0.04rem;


        }
        .right{
            border-bottom-right-radius: 0.04rem;
            border-top-right-radius: 0.04rem;
        }
    }
    .hello_img {
        position: relative;
        width: 100%;
        text-align: center;
        margin-bottom: 0.16rem;
        > img {
            margin-top: 0.23rem;
        }
        > div:nth-of-type(1) {
            font-size: 0.15rem;
            color: #1B1B1B;
        }
        .school {

            font-size: 0.14rem;
            color: #c7c7cc;
            .middle {
                color: #EBEBEB;
                position: relative;
                font-size: 0.11rem;
                line-height: 0.2rem;
            }
            .left {
                position: absolute;
                right: 0.1rem;
                width: 1.5rem;
                text-align: right;
                color: #707070;
                font-size: 0.11rem
            }
            .right {
                position: absolute;
                left: 0.1rem;
                text-align: left;
                width: 1.5rem;
                color: #707070;
                font-size: 0.11rem
            }
        }
    }
    .homework {
        box-sizing: border-box;
        padding: 0 0.15rem;
        width: 100%;
        background: #DEEAE1;
        height: 0.4rem;
        color: #999;
        font-size: 0.13rem;
        line-height: 0.4rem;
    }
    .pDynamic_content {
        box-sizing: border-box;
        padding: 0.15rem;
        border-bottom: 1px solid #F4F4F4;
        > .vux-flexbox-item {
            display: flex;
            line-height: 0.3rem;
            font-size: 0.13rem;
            align-items: center;
            > span:nth-of-type(1) {
                display: inline-block;
                width: 0.08rem;
                height: 0.08rem;
                border-radius: 100%;
                background: #FD7416;
                margin-right: 0.08rem;
            }
            > span:nth-of-type(2) {
                font-size: 0.13rem;
                color: #34B633;
                font-weight: bold;
            }
            > span:nth-of-type(3) {
                margin-left: 0.1rem;
                font-size: 0.13rem;
                color: #222;
            }
        }
    }
    .btn {
        width: 100%;
        display: flex;
        justify-content: center;
        align-content: center;
        box-sizing: border-box;
        padding: 0.12rem 0;
        border-bottom: 0.13rem solid #DEEAE1;
        button {
            border: 0;
            color: rgba(26, 173, 25, 1);
            background: #FFFFFF;
            font-size: 0.14rem;
        }
        .vux-x-icon {
            fill: #DBDBDB;
        }
    }
}
