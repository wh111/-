.appraisal_math{
  .content_flexbox{
    justify-content: space-between;
    box-sizing: border-box;
  }
  .content_flexbox:nth-of-type(1){
    padding: 0.16rem 0 0 0.15rem;
    font-weight: bold;
    color: #343434;
    font-size: 0.18rem;
  }
  .content_flexbox:nth-of-type(2){
    color: #444444;
    padding: 0.16rem 0.16rem 0.1rem 0.16rem;
    align-items: center;
    font-size: 0.14rem;
    font-weight: bold;
  }
  .content_flexbox:nth-of-type(3){
    padding: 0 0.16rem 0.16rem  0.16rem;
    align-items: center;
    font-size: 0.14rem;
    color: #444444;
    font-weight: bold;
  }
  .aside{
    box-sizing: border-box;
    padding: 0.13rem 0.15rem 0.04rem 0.15rem;
    background: #DEEAE1;
    color: #6F7571;
    font-weight: bold;
  }
  .footer{
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 0.15rem 0 0.15rem 0.15rem;
    color: #616161;
    font-weight: bold;
    border-bottom: 0.01rem solid #EAF1EC;
  }
  .vux-x-icon {
    fill: #DBDBDB;
    margin-top: 0.05rem;
  }
  .content_progress{
    border-radius: 0.05rem;
    overflow: hidden;
    >div{
      height: 0.09rem;
    }
  }
}
